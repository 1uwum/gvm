if [[ $1 == "version" ]]; then
  echo "Go Version Manager v$GVM_VERSION"
elif [[ $1 == "implode" ]]; then
  rm -rf ~/.gvm
elif [[ $1 == "install" ]]; then
  ~/.gvm/bin/gvm-install $@
elif [[ $1 == "use" ]]; then
  ~/.gvm/bin/gvm-use $@
elif [[ $1 == "list" ]]; then
  ~/.gvm/bin/gvm-list $@
else
  echo "== Usage
  gvm Action
== Action
  version    - print the gvm version number
  implode    - completely remove gvm
  install    - install go versions
  use        - select a go version to use
  list       - list installed go versions"
fi

