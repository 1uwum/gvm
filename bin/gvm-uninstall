#!/bin/bash
UNINSTALL_ROOT=~/.gvm/gos/go-$2
if [[ $1 == "uninstall" ]]; then
  if [[ -n $2 ]]; then
    rm -rf $UNINSTALL_ROOT
    echo "Uninstalled version $2"
    exit 0
  else
    echo "ERROR: Please specifiy the version"
    exit 1
  fi
else
  echo "Please use gvm [action] to call this file"
  exit 1
fi

