#!/bin/bash
if [[ $1 == "list" ]]; then
  echo "
gvm gos
"
  CUR_VER=`readlink ~/.gvm/gos/default | awk '{ n=split($1,path,"/"); print path[n] }'`
  ls -1 ~/.gvm/gos | grep ^go | sed 's/^/   /g' | sed 's/^   '$CUR_VER'/=> '$CUR_VER'/g' #'s/^/foo-/g'
  echo
else
  echo "Please use gvm [action] to call this file"
  exit 1
fi

