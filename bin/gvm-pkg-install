#!/bin/bash
if [[ $1 == "pkg" ]] && [[ $2 == "install" ]]; then
  if [[ -n $4 ]]; then
    git clone git@github.com:moovweb/$3 $GVM_ROOT/packages/default/$3-$4 > /dev/null 2>&1
    git checkout $4 > /dev/null 2>&1
    cd $GVM_ROOT/packages/default/$3-$4; make install > /dev/null 2>&1
  else
    echo "ERROR: Please specifiy the version"
    exit 1
  fi
else
  echo "Please use gvm [action] to call this file"
  exit 1
fi

